               TextColor="White"
               FontAttributes="Bold"
               VerticalTextAlignment="Center"/>
            </StackLayout>
        </NavigationPage.TitleView>
    <ScrollView>
    <StackLayout>
        <Entry x:Name="_id"
                Placeholder="Enter Team ID" />
        <Entry x:Name="_job1"
                Placeholder="Enter Job Completed" />
        <Entry x:Name="_job2"
                Placeholder="Enter Job Completed" />
        <Entry x:Name="_job3"
                Placeholder="Enter Job Completed" />
        <Entry x:Name="_job4"
                Placeholder="Enter Job Completed" />
        <Entry x:Name="_job5"
                Placeholder="Enter Job Completed" />
         <Button Text="Jobs Completed?"
                 FontAttributes="Bold"
                Clicked="Button_Clicked" />
    </StackLayout>
    </ScrollView>
</ContentPage>
